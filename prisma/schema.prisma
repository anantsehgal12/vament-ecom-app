generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String       @id
  name        String
  price       String
  mrp         Float?
  taxRate     Float        @default(0)
  description String
  categoryId  String
  stock       Int          @default(0)
  createdAt   DateTime     @default(now())
  category    Category     @relation(fields: [categoryId], references: [id])
  images      Image[]
  variants    Variant[]
  cartItems   CartItem[]
  orderItems  OrderItem[]
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[]
}

model Variant {
  id        Int     @id @default(autoincrement())
  name      String?
  productId String
  product   Product @relation(fields: [productId], references: [id])
  images    Image[]
  cartItems CartItem[]
  orderItems OrderItem[]
}

model Image {
  id        Int      @id @default(autoincrement())
  src       String
  alt       String
  productId String?
  product   Product? @relation(fields: [productId], references: [id])
  variantId Int?
  variant   Variant? @relation(fields: [variantId], references: [id])
}

model Cart {
  id       String     @id @default(cuid())
  userId   String     @unique
  items    CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  variantId Int?
  variant   Variant? @relation(fields: [variantId], references: [id])
  quantity  Int     @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId, variantId])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

model Order {
  id          String      @id @default(cuid())
  orderId     String      @unique
  userId      String
  totalAmount Float
  status      OrderStatus @default(PENDING)
  razorpayOrderId String?
  razorpayPaymentId String?
  // Customer details
  fullName    String?
  contactNo   String?
  address     String?
  city        String?
  state       String?
  pincode     String?
  country     String?
  email       String?
  invoiceUrl  String?
  items       OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  variantId Int?
  variant   Variant? @relation(fields: [variantId], references: [id])
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
}

enum DiscountType {
  PERCENT
  FIXED
}

model Coupon {
  id          String       @id @default(cuid())
  code        String       @unique
  discountType DiscountType
  value       Float
  expiryDate  DateTime
  isActive    Boolean      @default(true)
  usageLimit  Int?
  usedCount   Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum NotificationType {
  ORDER
  COUPON
  STOCK_UPDATE
  GENERAL
}

model Notification {
  id        String            @id @default(cuid())
  message   String
  type      NotificationType
  isRead    Boolean           @default(false)
  isPinned  Boolean           @default(false)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}
